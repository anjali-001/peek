    <div class="main container-fluid">
        <div class="row">   
        <div class="main__left col-12 col-xs-12 col-sm-12 col-md-10 col-lg-10"> 
            <div class="main__videos row">
                <div id="video-grid">

                </div>
            </div>
            <div class="main__controls py-1">
                    <div class="main__controls__button px-4">
                        <p id="roomId" class="d-none"><%= roomId %></p>
                         <i class="fa fa-clipboard text-light" onclick="copyToClipboard('#roomId')"></i>
                    </div>
                    <div onclick="muteUnmute()" class="main__controls__button main__mute_button  px-4">
                        <i class="fas fa-microphone"></i>
                    </div>
                    <div onclick="playStop()" class="main__controls__button main__video_button px-4">
                        <i class="fas fa-video stop_video"></i>
                    </div>
                    <div class="main__controls__button px-4" onclick="endMeet()">
                        <i class="fas fa-phone-alt leave_meeting"></i>
                     </div>
               
            </div>
        </div>
        <div class="main__right col-12 col-sm-12 col-md-2 col-lg-2 col-xs-12">
            <div class="main__header">
                <h3 class="text-light text-center chat">Chat</h3>
            </div>
            <div class="main__chat_window chat">
                <ul class="messages text-light">

                </ul>
            </div>
            <div class="main__message_container">
                <input id="chat_message" type="text" placeholder="Type message here..." class="form-control" />
            </div>
        </div>
    </div>
    </div>
    <script src="script.js"></script>
</body>
</html>